<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/PaleSilver">

    <LinearLayout
        android:id="@+id/navbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Axolotl"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollContent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/navbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2300018098 - Zainal Basri Karanggusi"
            android:textColor="@color/PaleSilver"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/navbarLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="@color/PaleSilver"
                android:elevation="2dp"
                android:padding="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="PGM Hécate II"
                    android:background="@color/Axolotl"
                    android:textColor="@color/PaleSilver"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hecate_ii" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Artichoke"
                    android:layout_marginTop="4dp"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PGM Hecate II adalah senapan runduk anti-materiel kaliber .50 BMG (12.7×99mm NATO) yang digunakan untuk menembak target jarak jauh seperti kendaraan ringan, peralatan militer, atau personel pada jarak hingga ~1.800–2.000 meter; banyak digunakan oleh pasukan khusus (termasuk militer Prancis)"
                        android:textSize="14sp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/Axolotl"
                        android:text="Lihat Detail"
                        android:textColor="@color/PaleSilver" />
                    <Space
                        android:layout_width="12dp"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/Axolotl"
                        android:text="Favorit"
                        android:textColor="@color/PaleSilver" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="@color/PaleSilver"
                android:elevation="2dp"
                android:padding="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="FN SCAR H"
                    android:background="@color/Axolotl"
                    android:textColor="@color/PaleSilver"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fn_scar_h" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Artichoke"
                    android:layout_marginTop="4dp"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FN SCAR-H adalah senapan serbu kaliber 7.62×51mm NATO yang dirancang untuk peran penembakan jarak menengah hingga jauh pada unit khusus, mengombinasikan daya tembak, presisi, dan modularitas untuk berbagai misi; sering digunakan oleh pasukan khusus dan unit pengujian seperti USSOCOM."
                        android:textSize="14sp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/Axolotl"
                        android:text="Lihat Detail"
                        android:textColor="@color/PaleSilver" />
                    <Space
                        android:layout_width="12dp"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/Axolotl"
                        android:text="Favorit"
                        android:textColor="@color/PaleSilver" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="@color/PaleSilver"
                android:elevation="2dp"
                android:padding="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="FN Five-seveN"
                    android:background="@color/Axolotl"
                    android:textColor="@color/PaleSilver"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fn_five_seven" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Artichoke"
                    android:layout_marginTop="4dp"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FN Five-seveN adalah pistol semi-otomatis kaliber 5.7×28mm yang berfungsi sebagai sidearm dengan kemampuan penetrasi lebih baik terhadap rompi antipeluru ringan, recoil rendah, dan kapasitas magazen besar; umumnya dipakai oleh polisi, unit keamanan, dan beberapa pasukan khusus."
                        android:textSize="14sp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/Axolotl"
                        android:text="Lihat Detail"
                        android:textColor="@color/PaleSilver" />
                    <Space
                        android:layout_width="12dp"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/Axolotl"
                        android:text="Favorit"
                        android:textColor="@color/PaleSilver" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="@color/PaleSilver"
                android:elevation="2dp"
                android:padding="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Daewoo Telecom K7"
                    android:background="@color/Axolotl"
                    android:textColor="@color/PaleSilver"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/k7" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Artichoke"
                    android:layout_marginTop="4dp"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daewoo K7 adalah SMG kaliber 9×19mm Parabellum yang dirancang untuk operasi taktis dengan peredam suara integral, cocok untuk unit penyerbu dan operasi yang membutuhkan tembakan senyap; digunakan oleh pasukan khusus dan unit kepolisian Korea Selatan."
                        android:textSize="14sp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/Axolotl"
                        android:text="Lihat Detail"
                        android:textColor="@color/PaleSilver" />
                    <Space
                        android:layout_width="12dp"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/Axolotl"
                        android:text="Favorit"
                        android:textColor="@color/PaleSilver" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textStyle="bold"
                android:backgroundTint="@color/Axolotl"
                android:textColor="@color/PaleSilver"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>